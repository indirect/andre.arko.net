#!/usr/bin/env ruby
require "date"
require "fileutils"
require "shellwords"

title = ARGV[0]
abort("Usage: bin/post TITLE [DATE]") if title.empty?

date = (Date.parse(ARGV[1]) || Date.today).strftime('%Y-%m-%d')
name = title.gsub(/ /, '-').gsub(/[^\w-]/,'').downcase
filename = File.join("_posts", "#{date}-#{name}.md")
dirname = File.join("_postfiles", "#{date}-#{name}")

FileUtils.mkdir_p(dirname)

File.open(filename, "w") do |f|
  f.puts "---"
  f.puts "title: \"#{title}\""
  f.puts "layout: post"
  f.puts "---"
  f.puts
end

puts filename
puts dirname
system("open #{Shellwords.escape(dirname)}")

case ENV["EDITOR"]
when /mvim?/
  system "mvim +5 #{Shellwords.escape(filename)}"
when /mate/
  system "#{ENV["EDITOR"]} -l 5 #{Shellwords.escape(filename)}"
end
